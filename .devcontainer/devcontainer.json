{
  "name": "Coffee Tasting Journal",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:4-24-bookworm",

  // コンテナ内の機能追加
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  // VS Code の設定
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "Prisma.prisma",
        "ms-azuretools.vscode-docker",
        "vitest.explorer"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.preferences.preferTypeOnlyAutoImports": true,
        "[prisma]": {
          "editor.defaultFormatter": "Prisma.prisma"
        }
      }
    }
  },

  // ポートフォワーディング
  "forwardPorts": [3000, 5555],
  "portsAttributes": {
    "3000": {
      "label": "Next.js Dev Server",
      "onAutoForward": "notify"
    },
    "5555": {
      "label": "Prisma Studio",
      "onAutoForward": "silent"
    }
  },

  // コンテナ作成後に実行するコマンド（node_modulesボリュームの所有権を修正してからnpm install）
  // npm rebuild: ネイティブモジュール（better-sqlite3等）をNode.jsバージョンに合わせて再コンパイル
  "postCreateCommand": "sudo chown node:node node_modules && npm install && npm rebuild && npx prisma generate",

  // コンテナ起動時に実行するコマンド（毎回）
  "postStartCommand": "cp -n .env.example .env 2>/dev/null || true",

  // ワークスペースのマウント設定
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // 環境変数
  "containerEnv": {
    "DATABASE_URL": "file:./data/database.db"
  },

  // マウント設定（データ永続化）
  "mounts": [
    "source=coffee-tasting-journal-node-modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
  ],

  // 非rootユーザーで実行
  "remoteUser": "node"
}
